{
  "name": "transcendence_nginx",
  "version": "1.0.0",
  "description": "Users microservice",
  "main": "dist/index.js",
  "scripts": {
  "dev": "ts-node-dev --respawn app/index.ts",
  "build": "tsc && npm run build:css",
  "build:css": "tailwindcss -i ./src/css/input.css -o ./src/public/css/output.css",
  "start": "node dist/index.js",
  "watch:css": "tailwindcss -i ./src/css/input.css -o ./src/public/css/output.css --watch"
},
  "dependencies": {
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "@fastify/cors": "^8.2.0",
    "@fastify/helmet": "^10.0.0",
    "fastify": "^4.21.0",
    "tailwindcss": "^4.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/sqlite3": "^3.1.8",
    "@types/bcrypt": "^5.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
